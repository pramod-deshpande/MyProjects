@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme" IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Dense="true" Elevation="0" Class="border-b mud-border-dark border-solid">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudText Typo=Typo.h6 Color="Color.Default">My Projects</MudText>
    </MudAppBar>

    <MudToolBar Class="mt-16 px-6">
        <MudSpacer />
        <MudButton Class="px-3 py-2 rounded border-2 border-solid" Link="/create" StartIcon="@Icons.Material.Filled.Add"><MudText Typo="Typo.subtitle1">Add a project</MudText></MudButton>
    </MudToolBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-10">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme Theme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Open Sans", "sans-serif" }
                }
            },
            Palette = new Palette()
            {
                Background = "#f6f4f6",
                Surface = "#f7f7f7",
                AppbarBackground = "#1f1f1f",
                DrawerBackground = "#1f1f1f",

                Primary = "#11768C",
                PrimaryLighten = "#44A9BF",
                PrimaryDarken = "#004359",


                Secondary = "#8C2711",
                SecondaryLighten = "#BF5A44",
                SecondaryDarken = "#590000"

            }


        };
}
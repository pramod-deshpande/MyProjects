@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme" IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudAppBar Dense="true" Elevation="0" Class="border-b mud-border-dark border-solid">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Secondary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <MudSpacer />
    <MudText Typo=Typo.h6 Color="Color.Primary">My Projects</MudText>
</MudAppBar>

<MudDrawer @bind-Open="@_drawerOpen"  Elevation="0" PreserveOpenState="true">
    <NavMenu />
</MudDrawer>
<MudMainContent >
    <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-10">
        @Body
    </MudContainer>
</MudMainContent>



@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme Theme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Open Sans", "sans-serif" }
                }
            },
            Palette = new Palette()
            {
                Background = "#ffffff",
                Surface = "#ffffff",
                AppbarBackground = "#ffffff",
                DrawerBackground = "#ffffff",
            }


        };
}
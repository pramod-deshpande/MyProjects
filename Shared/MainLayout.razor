@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme" IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Dense="true" Elevation="0" >
        <MudToggleIconButton @bind-Toggled="_drawerOpen" Color="Color.Primary" ToggledColor="Color.Secondary" Icon="@Icons.Material.Filled.MenuOpen"  ToggledIcon="@Icons.Material.Filled.Close"></MudToggleIconButton>
@*
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />*@
        <MudSpacer />
        <MudLink Href="/" Typo=Typo.h6 Color="Color.Info">My Projects</MudLink>
    </MudAppBar>

    <MudToolBar Class="mt-12 px-6">
        <MudSpacer />
        <MudButton Class="px-3 py-2 rounded border-2 border-solid" Link="/create" StartIcon="@Icons.Material.Filled.Add"><MudText Typo="Typo.subtitle1">Add a project</MudText></MudButton>
    </MudToolBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="border-r mud-border-dark border-solid">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme Theme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Open Sans", "sans-serif" },

                },
                H4 = new H4()
                {
                    FontFamily = new[] { "Ubuntu", "sans-serif" },
    
                },
                H6 = new H6()
                {
                    FontFamily = new[] { "Ubuntu", "sans-serif" },

                },
            },
            Palette = new Palette()
            {
                Background = "#f5f5f5",
                Surface = "#fafafa",
                AppbarBackground = "#0d1117",
                DrawerBackground = "#fafafa",
            }


        };
}
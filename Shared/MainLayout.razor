@inherits LayoutComponentBase

<MudThemeProvider Theme="Theme" IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />

<style>
    .border-navbar{
        border-right-style:solid;
        border-right-color:@RandomColor.GetRandomColor();
        border-right-width:3px
    }

    .border-appbar {
        border-bottom-style: solid;
        border-bottom-color: @RandomColor.GetRandomColor();
        border-bottom-width: 3px
    }
</style>

<MudLayout>
    <MudAppBar Dense="true" Elevation="0" Class="border-appbar">
        <MudToggleIconButton @bind-Toggled="_drawerOpen" Color="Color.Secondary" ToggledColor="Color.Secondary" Icon="@Icons.Material.Filled.MenuOpen" ToggledIcon="@Icons.Material.Filled.Close"></MudToggleIconButton>
        @*
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />*@
        <MudSpacer />
        <MudLink Href="/" Typo=Typo.h6 Color="Color.Tertiary">My Projects</MudLink>
    </MudAppBar>

    <MudToolBar Class="mt-12 px-6">
        <MudSpacer />
        <MudButton Class="px-3 py-2 rounded border-2 border-solid" Link="/create" StartIcon="@Icons.Material.Filled.Add"><MudText Typo="Typo.subtitle1">Add a project</MudText></MudButton>
    </MudToolBar>

    <MudDrawer @bind-Open="@_drawerOpen" Elevation="0" ClipMode="DrawerClipMode.Always" Class="border-navbar">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-2">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme Theme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Open Sans", "sans-serif" },

                },
                H4 = new H4()
                {
                    FontFamily = new[] { "Ubuntu", "sans-serif" },

                },
                H6 = new H6()
                {
                    FontFamily = new[] { "Ubuntu", "sans-serif" },

                },
            },
            Palette = new Palette()
            {
                //f5f5f5
                Background = "#f5f5f5",
                Surface = "#fafafa",
                AppbarBackground = "#0d1117",
                DrawerBackground = "#fafafa",

                Primary = "#6F96A6",
                PrimaryLighten = "#A2C9D9",
                PrimaryDarken = "#3C6373",


                Secondary = "#8ABF92",
                SecondaryLighten = "#BDF2C5",
                SecondaryDarken = "#578C5F",


                Tertiary = "#F2C791",
                TertiaryLighten = "#FFFAC4",
                TertiaryDarken = "#BF945E",
            }


        };
}